@model A3.Model.Process
@{
    Layout = "~/Views/Shared/_LoggedLayout.cshtml";
}

<div>
    @using (Html.BeginForm("CreateNew", "Modules", FormMethod.Post, new { @class = "form" }))
    {
        @Html.AntiForgeryToken()
      

        <div class="container px-4 py-5" id="custom-cards">
            <h2 class="pb-2 border-bottom">Define Process</h2>
            <div class="row row-cols-1 row-cols-md-2 mb-3 text-center">
                <div class="col">
                    <div class="card mb-4 rounded-3 shadow-sm ">
                        <div class="card-body">
                            <div class="row mb-3">
                                @Html.TextBoxFor(m => m.ProcessName, new { @class = "form-control", @placeholder = "Process Name" })
                                @Html.HiddenFor(m => m.ProcessID)
                                @Html.ValidationMessageFor(m => m.ProcessName)
                            </div>

                            <div class="row mb-3">
                                @Html.TextBoxFor(m => m.Summary, new { @class = "form-control", @placeholder = "Summary" })
                                @Html.ValidationMessageFor(m => m.Summary)
                            </div>
                            <div class="row mb-3">
                                @Html.TextBoxFor(m => m.LogoURL, new { @class = "form-control", @placeholder = "Logo" })

                            </div>

                        </div>
                    </div>
                </div>

                <div class="m-3">
                    @ViewBag.Title
                </div>



            </div>
            <div class="text-end">

                <button type="submit" value="Next" class="btn btn-primary">Save   &raquo;</button>

            </div>
        </div>

    }
</div>

