@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model A3.Model.Client
<div>
    @using (Html.BeginForm("index", "Default", FormMethod.Post, new { @class = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="container py-4">
            <div class="p-2 pb-md-4 mx-auto text-center">
                <h1>Register</h1>
            </div>
            <div class="row row-cols-1 row-cols-md-2 mb-3 text-center">
                <div class="col">
                    <div class="card mb-4 rounded-3 shadow-sm ">
                        <div class="card-header py-3">
                            <h4 class="my-0 fw-normal">Company</h4>

                        </div>

                        <div class="card-body">
                            <div class="row mb-3">
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Company Name" })
                                @Html.ValidationMessageFor(m => m.Name)

                            </div>
                            @Html.Partial("_user", Model.Entities[0])

                        </div>
                    </div>
                </div>


                <div class="col">
                    <div class="card mb-4 rounded-3 shadow-sm">
                        <div class="card-header py-3">
                            <h4 class="my-0 fw-normal">Address</h4>

                        </div>

                        <div class="card-body">
                            @Html.Partial("_address", Model.Entities[0].Address)

                        </div>
                    </div>
                </div>


            </div>
            <div class="text-end">

                <button type="submit" value="Next" class="btn btn-primary">Next   &raquo;</button>

            </div>
        </div>

    }
</div>
