@model A3.Model.Group
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_LoggedLayout.cshtml";
}

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LoggedLayout.cshtml";
}
<script src="~/Scripts/GroupFields.js"></script>
<script src="~/Scripts/Common.js"></script>



<div class="container px-4 py-5" id="custom-cards">
    <h2 class="pb-2 border-bottom">Manage Groups</h2>

    <div class="container-fluid">

        <div class="row">


            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <div class="input-group mb-3">
                                @Html.ActionLink("Create New", "Index", "DefineGroups", new { area = "A3Admin" }, new { @class = "btn  btn-outline-dark m-2" })


                            </div>
                        </li>
                        <li class="nav-item">

                            @using (Html.BeginForm("Search", "DefineGroups", FormMethod.Post, new { @class = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                <div class="input-group mb-3">
                                    @Html.TextBoxFor(m => m.GroupName, new { @class = "form-control", @placeholder = "Search" })

                                    <div class="text-end">

                                        <button type="submit" class="bi bi-search  btn btn-outline-dark">Go</button>

                                    </div>
                                </div>
                                foreach (var a in UserProfile.Groups.Groups)
                                {
                                    <button type="button" class="btn btn-link" onclick="GetGroup(@a.GroupID)">@a.GroupName</button>
                                }
                            }


                        </li>

                    </ul>
                </div>
            </nav>



            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 ">
                <div class="chartjs-size-monitor">
                    <div class="chartjs-size-monitor-expand">
                        <div class=""></div>
                    </div>
                    <div class="chartjs-size-monitor-shrink">
                        <div class=""></div>
                    </div>
                </div>

                @using (Html.BeginForm("Index", "DefineGroups", FormMethod.Post, new { @class = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <div>
                        @Html.Partial("SelectedGroups", Model)


                    </div>





                }

                <canvas class="my-4 w-100 chartjs-render-monitor" id="myChart" width="1072" height="452" style="display: block; width: 1072px; height: 452px;"></canvas>


            </main>



        </div>
    </div>

</div>




