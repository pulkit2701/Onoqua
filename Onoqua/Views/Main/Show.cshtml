@model Onoqua.Models.ViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Show</title>
</head>
<body>
    <!-- Static navbar -->
    <nav class="navbar navbar-default navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div><h1>Onoqua</h1></div>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                    </li>
                </ul>

            </div><!--/.nav-collapse -->
        </div>
    </nav>


    <div class="container">
        @using (Html.BeginForm("Show", "Main", FormMethod.Post, new { @class = "form" }))
        {
            @Html.AntiForgeryToken()
            <div id="HomeBody">
                <h4>@Model.CurrentForm.FormTitle</h4>
                <div>
                    <div class="row">
                        @{
                                        Html.HiddenFor(m => Model.CurrentFormId);
                                        int b = 0;
                                        while (Model.CurrentForm.FieldModel.Count > b)
                                        {
                                            
                                                var grpID = @Model.CurrentForm.FieldModel[b].GroupID;
                                                <div class="@Model.CurrentForm.FieldModel[b].UIClass">
                                                    <div class="panel panel-default">
                                                        <div class="panel-heading">
                                                            @Model.CurrentForm.FieldModel[b].GroupName
                                                        </div>
                                                        <div class="panel-body">
                                                            @while (Model.CurrentForm.FieldModel.Count > b && grpID == Model.CurrentForm.FieldModel[b].GroupID)
                                                            {
                                                                <div class=@Model.CurrentForm.FieldModel[b].FieldUIClass>
                                                                    <label>@Model.CurrentForm.FieldModel[b].FieldName</label>
                                                                    
                                                                    @Html.TextBoxFor(n => n.CurrentForm.FieldModel[b].FieldValue, new { @class = "form-control", @type = Model.CurrentForm.FieldModel[b].FieldType })
                                                                </div>
                                                                b++;
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                        }
                         }
                    </div>
                    <div class="col-md-12">
                        <div class="row">
                            <br />
                            <br />
                            @if (Model.FirstFormID != Model.CurrentFormId)
                            {
                                <button type="submit" class="btn btn-info btn-lg col-md-2 pull-left" name="btnValue" value="-1">Previous</button>
                            }
                            @if (Model.LastFormID == Model.CurrentFormId)
                            {
                                <button type="submit" class="btn btn-info btn-lg col-md-2 pull-right" name="btnValue" value="0">Submit</button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-info btn-lg col-md-2 pull-right" name="btnValue" value="1">Next</button>
                            }
                        </div>
                    </div>
                </div>

             </div>
        }
    </div> <!-- /container -->
</body>
</html>
