@model Onoqua.Models.QueryModel
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Layouts/_configure.cshtml";
}
<form id="__AjaxAntiForgeryForm" action="#" method="post">@Html.AntiForgeryToken()</form>
<div class="row container">
    <div class="col-md-12 page-header">
        <h3>Define Queries</h3>
    </div>
    <div class="row col-md-12">
        <div class="col-md-3">

            <div class="row panel panel-default">
                <div class="panel-body" style="min-height:300px">
                    <br />
                        <br />

                        <div class="input-group">
                            <input type="text" class="form-control" id="searchQuery" placeholder="Search Queries">
                            <div class="input-group-addon">
                                <button type="button" class="glyphicon glyphicon-search" onclick="searchQueries()" ></button>
                            </div>
                        </div>
                        <div id="searchResult">
                        </div>                    
                </div>
            </div>
        </div>

        <div class="col-md-1"></div>
        <div class="col-md-6">
            @using (Html.BeginForm("SaveGroup", "DefineGroup", FormMethod.Post, new { @class = "form" }))
            {
                @Html.AntiForgeryToken()



                <div class="row">
                    <br />
                    <button type="submit" class="btn btn-info col-md-2 pull-left" name="submit" value="-1">Go Back</button>
                    <button type="submit" class="btn btn-info col-md-2 pull-right" name="submit" value="1">Save</button>
                </div>
            }
        </div>




    </div>

</div>
