@model Onoqua.Models.GroupModel



<div class="col-md-6">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">@Model.SelectedGroup.GroupName</h3>
        </div>
        <div class="panel-body text-center" style="min-height:300px">
            <div class="row">
                <div class="row pull-left">
                    @foreach (var i in Model.Fields)
            {
                        <div class="col-md-8">
                            <h5>@i.FieldName</h5>
                        </div>
                        <div class="col-md-4">
                            <h5>@i.FieldType</h5>
                        </div>
                    }
                </div>
            </div>
          
        </div>
        <div class="row">
            <div class="bottom-right col-md-10">
                <button type="button" class="btn-link pull-right" onclick="ModelPopup('result', 'Showfield', { groupID:@Model.SelectedGroup.GroupID, groupName:'@Model.SelectedGroup.GroupName' })">Test...</button>
                <div id="result" ></div>
            </div>
        </div>
    </div>

</div>
<div class="col-md-6">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Search Fields</h3>
        </div>
        <div class="panel-body" style="min-height:300px">
            <div class="row">
                <div class="input-group">
                    <input type="text" class="form-control" name="searchFields" placeholder="Search Fields" id="searchField">
                    <div class="input-group-addon">
                        <button type="button" class="glyphicon glyphicon-search" onclick="SearchFields(@Model.SelectedGroup.GroupID)"></button>
                    </div>
                </div>
                <div id="fieldResult">
                </div>

            </div>

        </div>
    </div>

</div>