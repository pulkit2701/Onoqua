@model Onoqua.Entities.Models.Entity
<!DOCTYPE html>

<html>
<head>

    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="~/Scripts/Security/Security.js"></script>
</head>
<body>
    <div class="container">

        <div class="header clearfix">
            <nav>
                <ul class="nav nav-pills pull-right"></ul>
            </nav>
        </div>
        <div class="jumbotron">
            <h1 class="text-center"> o n o q u a</h1>
            <h4 class="text-center">Creating efficiencies</h4>

        </div>


        <div class="row" id="HomeBody">
            <div class="col-lg-8">
            </div>
            <div class="col-lg-4">

            </div>
            <div class="col-lg-4">
                @using (Html.BeginForm("Login", "Main", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <form class="form-horizontal">
                        <div class="form-group">
                            <div class="col-sm-10">
                                <h5>
                                    Existing customers login here.
                                </h5>


                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.emailID, new { @class = "form-control", @placeholder = "Email", @type = "email" })
                                <button type="button" class="btn btn-link">Forgot Password?</button>
                                <br />
                            </div>

                        </div>
                        <div class="form-group">
                            <div class="col-sm-10">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Pasword" })
                                <br />
                            </div>

                        </div>
                        <div class="form-group">
                            <div class="col-sm-10">
                                <input type="submit" value="Login" class="btn btn-info pull-left" />
                                <button type="button" class="btn btn-link pull-right" onclick="ShowRegister();">Register</button>
                            </div>
                        </div>
                    </form>
                }



            </div>

        </div>
    </div>
</body>
</html>
