@model Onoqua.Entities.Models.Group
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Layouts/_configure.cshtml";
}
<div class="row container">
    <div class="col-md-12 page-header">
        <h3>Define Groups</h3>
    </div>
    <div class="row col-md-12">
        <div class="col-md-3">

            <div class="row panel panel-default">
                <div class="panel-body" style="min-height:300px">
                    @using (Html.BeginForm("Manage", "DefineGroup", FormMethod.Post, new { @class = "form" }))
            {
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-info  center-block" name="submit" value="1">Manage Group Fields</button>
                    }
                    <br />
                    @using (Html.BeginForm("SearchGroup", "DefineGroup", FormMethod.Post, new { @class = "form" }))
            {
                        @Html.AntiForgeryToken()
                        <br />

                        <div class="input-group">
                            <input type="text" class="form-control" name="searchGroup" placeholder="Search Groups">
                            <div class="input-group-addon">
                                <button type="submit" class="glyphicon glyphicon-search"></button>
                            </div>
                        </div>
                        if (UserProfile.Groups.Groups != null)
                        {
                            <div class="list-group">
                                @foreach (var a in UserProfile.Groups.Groups)
                                {
                                    <h5>@a.GroupName</h5>
                                }
                            </div>
                        }
                    }
                </div>
            </div>
        </div>

        <div class="col-md-1"></div>
        <div class="col-md-6">
            @using (Html.BeginForm("SaveGroup", "DefineGroup", FormMethod.Post, new { @class = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="row panel panel-default">
                    <div class="panel-body" style="min-height:300px">
                        <h5>Group Name</h5>
                        @Html.TextBoxFor(m => m.GroupName, new { @class = "form-control", @placeholder = "Group Name" })

                    </div>
                </div>


                <div class="row">
                    <br />
                    <button type="submit" class="btn btn-info col-md-2 pull-left" name="submit" value="-1">Go Back</button>
                    <button type="submit" class="btn btn-info col-md-2 pull-right" name="submit" value="1">Save</button>
                </div>
            }
        </div>




    </div>

</div>
