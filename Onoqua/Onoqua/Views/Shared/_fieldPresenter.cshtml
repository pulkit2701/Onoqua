@model Onoqua.Models.ViewModel
@using (Html.BeginForm("Show", "Main", FormMethod.Post, new { @class = "form" }))
{
    @Html.AntiForgeryToken()
    for (int i = 0; i < Model.Fields.Count; i++)
    {
        <div class="form-group">
            <div class="@Model.Fields[i].UIClass">
                @string group = Model.Fields[i].GroupName;
                while (group == Model.Fields[i].GroupName)
                {
                    @if (Model.Fields[i].FieldType == "CheckBox")
                    {
                        <br />
                        <div>
                            @Html.LabelFor(n => n.Fields[i].FieldName, new { @type = "@n.Fields[i].FieldType" })
                        </div>
                    }
                    else
                    {
                        <div class="input-group input-group-lg">
                            <h3>@Model.Fields[i].FieldName</h3>
                            @Html.TextBoxFor(a => a.Fields[i].FieldValue, new { @class = "form-control" })
                        </div>
                    }




                }
            </div>
        </div>

    }
}
